{
  "compilerOptions": {
    "noLib": false,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "enzyme",
      "enzyme-adapter-react-16",
      "jest",
      "node",
      "react",
      "react-dom",
      "styled-components"
    ],
    "baseUrl": "./packages",
    "paths": {
      "@datapunt/asc-assets": [
        "./asc-assets/src"
      ],
      "@datapunt/asc-ui": [
        "./asc-ui/src"
      ],
      "@datapunt/asc-core": [
        "./asc-core/src"
      ]
    },
    "composite": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  },
  "files": [
    "custom.d.ts",
    "node_modules/jest-styled-components/typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "packages",
    "**/*.tsx",
    "**/*.ts"
  ]
}
