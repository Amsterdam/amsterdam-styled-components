{
  "private": true,
  "workspaces": [
    "packages/*",
    "stories"
  ],
  "scripts": {
    "prebuild": "lerna exec --scope @datapunt/asc-assets -- yarn build",
    "build": "yarn build:ts && yarn build:ts:es",
    "build:storybook": "yarn --cwd stories build",
    "build:ts": "tsc -b packages/asc-assets packages/asc-ui",
    "build:ts:es": "tsc -b packages/asc-assets/tsconfig.es.json packages/asc-ui/tsconfig.es.json",
    "build:watch": "yarn build -w",
    "clean:generated": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "postinstall": "lerna link",
    "lint": "concurrently \"yarn lint:css\" \"yarn lint:js\"",
    "lint:css": "stylelint \"./packages/**/*Style.ts\"",
    "lint:js": "eslint ./ --ext js,mdx,ts,tsx",
    "prepare": "yarn clean:generated && yarn build",
    "publish:canary": "lerna publish -c --yes",
    "publish:stable": "lerna publish",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook\"",
    "start:example:cra": "yarn --cwd ./node_modules/@datapunt/create-react-app-example start",
    "start:example:nextjs": "yarn --cwd ./node_modules/@datapunt/nextjs-example dev",
    "storybook": "yarn --cwd stories start",
    "stylelint": "stylelint \"./packages/**/*Style.ts\"",
    "test": "yarn jest  --collect-coverage",
    "test:coverage": "yarn jest --collect-coverage",
    "test:watch": "jest --watch --onlyChanged --verbose true",
    "prettier": "concurrently \"yarn prettier:js\" \"yarn prettier:package\"",
    "prettier:js": "prettier --write './packages/**/**/*.{ts, tsx}'",
    "prettier:package": "yarn prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "10.4.4",
    "@testing-library/react-hooks": "3.3.0",
    "@types/babel__core": "^7.1.9",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/eslint": "^7.2.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "@types/stylelint": "^9.10.1",
    "@types/svgo": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mdx": "^1.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.1",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "hygen": "^5.0.3",
    "jest": "^26.1.0",
    "jest-cli": "^26.1.0",
    "jest-styled-components": "7.0.2",
    "lerna": "3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "styled-components": "^5.1.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": "^10 || ^12 || ^14"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test --bail",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,mdx,js}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*Style.ts": [
      "stylelint"
    ]
  }
}
