{
  "private": true,
  "name": "amsterdam-styled-components",
  "description": "A library to manage styled components",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "homepage": "https://github.com/Amsterdam/amsterdam-styled-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/amsterdam-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/Amsterdam/amsterdam-styled-components/issues"
  },
  "version": "0.6.1-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:ts && lerna exec --scope @datapunt/asc-assets -- yarn build",
    "build:storybook": "build-storybook -c .storybook -s ./packages/asc-assets/lib -o .sb && yarn clean:generated",
    "build:ts": "tsc -b packages/asc-ui",
    "build:watch": "yarn build:ts -w",
    "clean:generated": "find ./packages -name \"*.d.ts\" -type f -delete",
    "deploy-storybook": "storybook-to-ghpages",
    "preinstall": "yarn symlink",
    "postinstall": "lerna link && lerna bootstrap",
    "lint": "yarn lint:js",
    "lint:css": "stylelint './packages/**/src/**/*.ts'",
    "lint:js": "eslint packages --ext ts,tsx",
    "prepare": "yarn prettify:package && yarn build",
    "publish:packages": "yarn lint & yarn test & lerna publish",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook\"",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./packages/asc-assets/lib",
    "symlink": "./scripts/link-core.sh",
    "test": "yarn jest",
    "test:coverage": "yarn jest --collect-coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch --onlyChanged --collect-coverage --verbose true",
    "prettify:package": "yarn prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@storybook/addon-a11y": "^5.0.5",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addon-info": "^5.0.5",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/addon-links": "^5.0.5",
    "@storybook/addon-storysource": "^5.0.5",
    "@storybook/addons": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "@storybook/storybook-deployer": "^2.8.1",
    "@svgr/webpack": "^4.1.0",
    "@types/babel__core": "^7.1.0",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/eslint": "^4.16.6",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.0",
    "@types/prettier": "^1.16.1",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "@types/storybook__addon-a11y": "^5.0.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-info": "^4.1.1",
    "@types/storybook__addon-knobs": "^4.0.4",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "@types/stylelint": "^9.10.0",
    "@types/svgo": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.13.1",
    "prettier": "^1.16.4",
    "prettier-package-json": "^2.1.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-scripts": "^2.1.8",
    "styled-components": "^4.2.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.6.0",
    "svgo": "^1.2.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.4000"
  },
  "engines": {
    "node": "^8 || ^10"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test"
    }
  }
}
