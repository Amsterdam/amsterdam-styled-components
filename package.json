{
  "private": true,
  "name": "amsterdam-styled-components",
  "description": "A library to manage styled components",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "homepage": "https://github.com/Amsterdam/amsterdam-styled-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/amsterdam-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/Amsterdam/amsterdam-styled-components/issues"
  },
  "version": "0.2.0-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "build": "tsc -b packages/asc-core packages/asc-assets packages/asc-ui",
    "build-storybook": "build-storybook",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:build": "find ./packages -name lib -type d -exec rm -rf {} +",
    "clean:node_modules": "find ./packages -name node_modules -type d -exec rm -rf {} +",
    "postinstall": "yarn clean && lerna link && lerna bootstrap",
    "lint": "yarn lint:js",
    "lint:css": "stylelint './packages/asc-core/src/**/*.ts'",
    "lint:js": "lerna run lint --parallel",
    "prepare": "yarn build",
    "publish": "lerna publish --contents lib",
    "start": "yarn postinstall && yarn prettify:package && yarn storybook",
    "storybook": "start-storybook -p 6006",
    "test": "yarn jest",
    "test:watch": "yarn test -- --watch",
    "prettify:package": "yarn prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@storybook/addon-actions": "4.1.13",
    "@storybook/addon-info": "4.1.13",
    "@storybook/addon-links": "4.1.13",
    "@storybook/addon-storysource": "4.1.13",
    "@storybook/addons": "4.1.13",
    "@storybook/react": "4.1.13",
    "@svgr/webpack": "^4.1.0",
    "@types/enzyme": "^3.1.18",
    "@types/enzyme-adapter-react-16": "^1.0.4",
    "@types/jest": "^24.0.0",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-info": "^3.4.4",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "4.1.10",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "enzyme-to-json": "3.3.5",
    "file-loader": "^3.0.1",
    "jest": "^24.0.0",
    "jest-cli": "24.1.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.13.0",
    "pre-commit": "^1.2.2",
    "prettier-package-json": "^2.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-scripts": "^2.1.5",
    "regenerator-runtime": "^0.13.1",
    "styled-components": "^4.1.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "precommit": [
    "lint",
    "test"
  ],
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
