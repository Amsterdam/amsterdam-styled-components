{
  "name": "amsterdam-styled-components",
  "description": "A library to manage styled components",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "homepage": "https://github.com/Amsterdam/amsterdam-styled-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/amsterdam-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/Amsterdam/amsterdam-styled-components/issues"
  },
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build-storybook": "build-storybook",
    "clean": "npm run clean:node_modules",
    "clean:node_modules": "find ./packages -name node_modules -type d -exec rm -r {} +",
    "postinstall": "npm run clean && npx lerna link && npx lerna bootstrap --hoist",
    "lint": "npm run lint:js",
    "lint:css": "stylelint './packages/**/*.ts'",
    "lint:js": "tslint -p tsconfig.json",
    "prepare": "npm run transpile",
    "publish": "lerna publish --contents lib",
    "start": "npm i && npm run prettify:package && concurrently \"npm run transpile:watch\" \"npm run storybook\"",
    "storybook": "start-storybook -p 6006",
    "test": "npm run transpile && npx jest",
    "test:watch": "npm run test -- --watch",
    "transpile": "npx lerna exec --parallel -- npm run transpile --",
    "transpile:watch": "npm run transpile -- -w",
    "prettify:package": "npx prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@storybook/addon-actions": "^4.0.8",
    "@storybook/addon-info": "^4.0.9",
    "@storybook/addon-links": "^4.0.8",
    "@storybook/addon-storysource": "^4.0.9",
    "@storybook/addons": "^4.0.8",
    "@storybook/react": "^4.0.8",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.0",
    "@types/react": "^16.7.7",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-links": "^3.3.3",
    "@types/storybook__react": "^4.0.0",
    "@types/styled-components": "^4.1.1",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "enzyme-to-json": "3.3.5",
    "jest": "^24.0.0",
    "jest-cli": "24.1.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.13.0",
    "pre-commit": "^1.2.2",
    "prettier-package-json": "^2.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "regenerator-runtime": "^0.13.1",
    "styled-components": "^4.1.1",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^22.0.0"
  },
  "precommit": [
    "lint",
    "test"
  ],
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
