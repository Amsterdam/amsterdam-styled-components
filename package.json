{
  "private": true,
  "name": "amsterdam-styled-components",
  "description": "A library to manage styled components",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "homepage": "https://github.com/Amsterdam/amsterdam-styled-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/amsterdam-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/Amsterdam/amsterdam-styled-components/issues"
  },
  "version": "0.6.1-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "lerna exec --scope @datapunt/asc-assets -- yarn generate ",
    "build": "lerna exec --scope @datapunt/asc-assets -- yarn build && yarn build:ts",
    "build:storybook": "build-storybook -c .storybook -s ./packages/asc-assets/lib -o .sb && yarn clean:generated",
    "build:ts": "tsc -b packages/asc-core packages/asc-ui",
    "build:watch": "yarn build:ts -w",
    "clean:generated": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "deploy-storybook": "storybook-to-ghpages",
    "postinstall": "lerna link && lerna bootstrap",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "prettier-stylelint --write './packages/**/src/**/*.ts'",
    "lint:js": "prettier-eslint --write './packages/**/src/**/*.{ts, tsx}'",
    "prepare": "yarn prettify:package && yarn build",
    "publish:packages": "yarn verify-integrity && lerna publish",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook\"",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./packages/asc-assets/src",
    "test": "yarn jest",
    "test:coverage": "yarn jest --collect-coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch --onlyChanged --collect-coverage --verbose true",
    "prettify:package": "yarn prettier-package-json --write **/package.json",
    "verify-integrity": "yarn lint && yarn test"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@storybook/addon-a11y": "^5.0.11",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "@svgr/webpack": "^4.2.0",
    "@types/babel__core": "^7.1.2",
    "@types/enzyme": "^3.9.2",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/eslint": "^4.16.6",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/prettier": "^1.16.4",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.4",
    "@types/storybook__addon-a11y": "^5.0.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-info": "^4.1.1",
    "@types/storybook__addon-knobs": "^5.0.0",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.15",
    "@types/stylelint": "^9.10.0",
    "@types/svgo": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-package-json": "^2.1.0",
    "prettier-stylelint": "^0.4.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^2.1.8",
    "styled-components": "^4.2.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "svgo": "^1.2.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "engines": {
    "node": "^8 || ^10"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn verify-integrity"
    }
  }
}
