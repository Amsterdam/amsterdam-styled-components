{
  "private": true,
  "name": "amsterdam-styled-components",
  "description": "A library to manage styled components",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "homepage": "https://github.com/Amsterdam/amsterdam-styled-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amsterdam/amsterdam-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/Amsterdam/amsterdam-styled-components/issues"
  },
  "version": "0.3.0-alpha.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:ts && lerna exec --scope @datapunt/asc-assets -- yarn build",
    "build:ts": "tsc -b packages/asc-core packages/asc-ui",
    "build:storybook": "build-storybook",
    "build:watch": "yarn build:ts -w",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:build": "find ./packages -name lib -type d -exec rm -rf {} +",
    "clean:node_modules": "find ./packages -name node_modules -type d -exec rm -rf {} +",
    "postinstall": "yarn clean && lerna link && lerna bootstrap",
    "lint": "yarn lint:js",
    "lint:css": "stylelint './packages/**/src/**/*.ts'",
    "lint:js": "eslint packages --ext ts,tsx",
    "prepare": "yarn build",
    "publish:packages": "lerna publish --contents lib",
    "start": "yarn postinstall && yarn prettify:package && concurrently \"yarn build:watch\" \"yarn storybook\"",
    "storybook": "start-storybook -p 6006",
    "test": "yarn jest",
    "test:watch": "yarn test -- --watch",
    "prettify:package": "yarn prettier-package-json --write **/package.json"
  },
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@storybook/addon-actions": "5.0.0",
    "@storybook/addon-info": "5.0.0",
    "@storybook/addon-links": "5.0.0",
    "@storybook/addon-storysource": "5.0.0",
    "@storybook/addons": "5.0.0",
    "@storybook/react": "5.0.0",
    "@svgr/webpack": "^4.1.0",
    "@types/enzyme": "^3.1.18",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.0",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-info": "^4.1.0",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "4.1.12",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.3",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.1.0",
    "jest-cli": "24.1.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.13.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.16.4",
    "prettier-package-json": "^2.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-scripts": "^2.1.5",
    "styled-components": "^4.1.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "engines": {
    "node": "^8 || ^10 || ^11"
  },
  "precommit": [
    "lint",
    "test"
  ]
}
