{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "scripts/port-check.sh && lerna exec --scope @datapunt/asc-assets -- yarn build",
    "build": "yarn build:ts && yarn build:ts:es",
    "build-storybook": "cross-env NODE_ENV=production build-storybook -c .storybook -s ./packages/asc-assets/static -o .sb",
    "build:ts": "tsc -b packages/asc-assets packages/asc-ui",
    "build:ts:es": "tsc -b packages/asc-assets/tsconfig.es.json packages/asc-ui/tsconfig.es.json",
    "build:watch": "yarn build -w",
    "clean:generated": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "deploy-storybook": "cross-env NODE_ENV=production storybook-to-ghpages",
    "postinstall": "lerna link",
    "lint": "concurrently \"yarn lint:css\" \"yarn lint:js\"",
    "lint:css": "stylelint \"./packages/**/*Style.ts\"",
    "lint:js": "eslint \"./packages/asc-ui/src\" --ext .ts,.tsx",
    "prepare": "yarn clean:generated && yarn build",
    "publish:canary": "lerna publish -c --yes",
    "publish:stable": "lerna publish",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook\"",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./packages/asc-assets/static",
    "stylelint": "stylelint \"./packages/**/*Style.ts\"",
    "test": "yarn jest  --collect-coverage",
    "test:coverage": "yarn jest --collect-coverage",
    "test:watch": "jest --watch --onlyChanged --verbose true",
    "prettier": "concurrently \"yarn prettier:js\" \"yarn prettier:package\"",
    "prettier:js": "prettier --write './packages/**/**/*.{ts, tsx}'",
    "prettier:package": "yarn prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-essentials": "^5.3.18",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-notes": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "10.0.3",
    "@testing-library/react-hooks": "3.2.1",
    "@types/babel__core": "^7.1.7",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/eslint": "^6.8.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/storybook__addon-info": "^5.2.1",
    "@types/styled-components": "^5.1.0",
    "@types/stylelint": "^9.10.1",
    "@types/svgo": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "hygen": "^5.0.3",
    "jest": "^25.4.0",
    "jest-cli": "^25.4.0",
    "jest-styled-components": "7.0.2",
    "lerna": "3.20.2",
    "lint-staged": "^10.2.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "react": "16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "styled-components": "^5.1.0",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "svgo": "^1.3.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "typescript-plugin-styled-components": "^1.4.4",
    "webpack": "^4.43.0"
  },
  "engines": {
    "node": "^10 || ^12"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test --bail",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*Style.ts": [
      "stylelint"
    ]
  }
}
