{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "scripts/port-check.sh && lerna exec --scope @datapunt/asc-assets -- yarn build",
    "build": "yarn build:ts",
    "build-storybook": "cross-env NODE_ENV=production build-storybook -c .storybook -s ./packages/asc-assets/lib/assets -o .sb",
    "build:ts": "tsc -b packages/asc-assets packages/asc-core packages/asc-ui",
    "build:watch": "yarn build -w",
    "clean:generated": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "deploy-storybook": "cross-env NODE_ENV=production storybook-to-ghpages",
    "postinstall": "lerna link",
    "lint": "concurrently \"yarn lint:css\" \"yarn lint:js\"",
    "lint:css": "stylelint \"./packages/**/*Style.ts\"",
    "lint:js": "eslint \"./packages/asc-ui/src\" \"./packages/asc-core/src\" --ext .ts,.tsx",
    "prepare": "yarn clean:generated && yarn build",
    "publish:packages": "lerna publish",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook\"",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./packages/asc-assets/lib/assets",
    "stylelint": "stylelint \"./packages/**/*Style.ts\"",
    "test": "yarn jest",
    "test:coverage": "yarn jest --collect-coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch --onlyChanged --collect-coverage --verbose true",
    "prettier": "concurrently \"yarn prettier:js\" \"yarn prettier:package\"",
    "prettier:js": "prettier --write './packages/**/**/*.{ts, tsx}'",
    "prettier:package": "yarn prettier-package-json --write **/package.json"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@storybook/addon-a11y": "^5.1.11",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-notes": "^5.1.11",
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "@svgr/webpack": "^4.3.2",
    "@testing-library/react": "8.0.9",
    "@testing-library/react-hooks": "1.1.0",
    "@types/babel__core": "^7.1.2",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/eslint": "^4.16.8",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.5",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__addon-knobs": "^5.0.3",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.18",
    "@types/stylelint": "^9.10.1",
    "@types/svgo": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.4",
    "hygen": "^4.0.8",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "3.16.4",
    "lint-staged": "^9.2.3",
    "mkdirp": "^0.5.1",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "react": "16.8.6",
    "react-docgen-typescript-loader": "^3.1.1",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6",
    "styled-components": "^4.3.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "svgo": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "typescript-plugin-styled-components": "^1.4.3",
    "webpack": "^4.39.2"
  },
  "engines": {
    "node": "^10 || ^12"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test --bail",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*Style.ts": [
      "stylelint"
    ]
  }
}
